    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let listing of allListings) {%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
                    <div class="card-img-overlay">
                        <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <p class="card-text"><small></small></p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listing.title%>
                            </b><br>
                            &#8377;<%= formatIndianRupee(listing.price) %>/night
                            <i class="tax-info">&nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% }%>
    </div>
    <% function formatIndianRupee(amount) { // Convert number to string and split into rupees and paise const
        parts=String(amount).split('.'); let rupees=parts[0]; const paise=parts.length> 1 ? parts[1] : '00';

        // Add commas to rupees
        rupees = rupees.replace(/\B(?=(\d{3})+(?!\d))/g, ',');

        // Return formatted rupee amount
        return rupees + '.' + paise;
        } %>
        <script>
           let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
taxSwitch.addEventListener("click", () => {
    let taxInfo = document.querySelectorAll(".tax-info"); // Use querySelectorAll to get all elements with class tax-info
    taxInfo.forEach(info => {
        if (info.style.display === "none" || info.style.display === "") {
            info.style.display = "inline"; // Show the element if it's currently hidden
        } else {
            info.style.display = "none"; // Hide the element if it's currently visible
        }
    });
});


        </script>